@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Calibri light', 'Tahoma', Arial, sans-serif

.header
  display block
  margin 0 auto
  width 80%

.nav
  background #e36c0a
  text-align center

  li
    display inline-block

  a
    display inline-block
    padding 4px 20px
    color #fff
    font-size 16px
    font-weight bold
    text-decoration none

    &:hover
      color #000

.main-content
  margin 50px auto
  max-width 600px

  p
    line-height 1.6
    margin-bottom 1.7em

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px
